@model DAL.Entity.Rezerwacja
@{
    ViewData["Title"] = "Create";
    Model.Od = DateTime.Now;
    Model.Do = DateTime.Now;
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Od" class="control-label"></label>
                <input asp-for="Od" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Do" class="control-label"></label>
                <input asp-for="Do" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IdMiejsca" class="control-label"></label>
                <input asp-for="IdMiejsca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}