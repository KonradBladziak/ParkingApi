@model IEnumerable<DAL.Entity.Miasto>
@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Województwo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var miasto in Model)
            {
                <tr>
                    <td>@miasto.Nazwa</td>
                    <td>@miasto.Wojewodztwo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Brak miast!</p>
}
<a asp-action="Index">Powrót</a>
