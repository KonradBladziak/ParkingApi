@model DAL.Entity.MiejsceInwalidzkie
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RozmiarMiejsca" class="control-label">Rozmiar miejsca [m2]</label>
                <input asp-for="RozmiarMiejsca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IdMiejsca" class="control-label"></label>
                <input asp-for="IdMiejsca" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{
    if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
}

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}